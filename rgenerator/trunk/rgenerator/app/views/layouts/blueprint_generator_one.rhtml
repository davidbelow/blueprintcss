<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" 
  "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
  <head>
    
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Blueprint CSS Generator</title>
    
    <%= javascript_include_tag :defaults %>
    <script src="/javascripts/lowpro.js" type="text/javascript" charset="utf-8"></script>
      
    <script type="text/javascript" charset="utf-8">
      // default grid value settings
      var default_settings = {
        desired_page_width: 950,
        total_page_width: '---',
        number_of_columns: 24,
        column_width: 30,
        margin_width: 10
      };
      
      function toggleStep(step,link){
        new Effect.toggle($(step),'slide');
        // change the name of the link
        var showTxt = "CUSTOMIZE";
        var closeTxt = showTxt + "<br>&uarr;";
        (link.innerHTML == showTxt) ? link.update(closeTxt) : link.update(showTxt);
      };
      function toggleAllSteps(link){
        new Effect.toggle($('step-1'),'slide'); 
        new Effect.toggle($('step-2'),'slide'); 
        new Effect.toggle($('step-3'),'slide'); 
        new Effect.toggle($('step-4'),'slide'); 
        new Effect.toggle($('step-5'),'slide');
        // change the name of the link
        var showTxt = "SHOW ALL OPTIONS";
        var closeTxt = "HIDE ALL OPTIONS";
        if(link.innerHTML == showTxt){
          link.update(closeTxt);
        }else{
          link.update(showTxt);
        }
      };
    </script>
    
    <!--  <script src="/javascripts/bgg.js" type="text/javascript" charset="utf-8"></script> -->
    
        
    <!-- Framework CSS -->
    <link rel="stylesheet" href="/stylesheets/blueprint/screen.css" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="/stylesheets/blueprint/print.css" type="text/css" media="print">    
    <link rel="stylesheet" href="/stylesheets/bgg.css" type="text/css" media="screen, projection" title="overrides and extras" charset="utf-8">  
    
  </head>
  
  <body>
    
    <!-- div.container -->
    <div class="container">
      
      <!-- div#header -->
      <div class="column span-24">
        <!-- div.column span-17 -->
        <div class="column span-17">
          <h1>Blueprint CSS Generator</h1>
        </div>
        <!-- /div.column span-17 -->
        <!-- div.column span-7 last -->
        <div class="column span-7 last">
          <p class="version">Version: <%= @version_str %></p>
        </div>
        <!-- /div.column span-7 last -->
      </div>
      <!-- /div#header -->
      
      <hr>
      
      <%= yield %>
      
    </div>
    <!-- /div.container -->
    
  </body>
  
</html>